{% extends 'basefront.html.twig' %}

{% block body %}
    <h1>Contact Us</h1>

    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.email) }}
    {{ form_row(form.subject) }}
    {{ form_row(form.message) }}
    {{ form_row(form.send) }}
    {{ form_end(form) }}

    <hr>

    <h2>Message Details</h2>
    <p>Name: {{ form.vars.value.name }}</p>
    <p>Email: {{ form.vars.value.email }}</p>
    <p>Subject: {{ form.vars.value.subject }}</p>
    <p>Message: {{ form.vars.value.message }}</p>
{% endblock %}
