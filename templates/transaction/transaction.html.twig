{% extends 'basefront.html.twig' %}

{% block title %}{{ account.name }}{% endblock %}

{% block body %}

    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 40px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Make Transaction</h5>


                    <div class="col-sm-10">
                    {{ form_start(form, {attr: {'novalidate': 'validate'}}) }}
                        {{ form(form) }}

                    {% if app.request.get('msg') is defined %}
                    {% set msg = app.request.get('msg') %}
                      <h4 style="color: black">  {{ msg }} </h4>
                    {% endif %}
                    </div>
                    


                </div>
            </div>

        </div>

    </div>

{% endblock %}
